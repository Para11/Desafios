print('==== DESAFIO 60B ====\n')
print('Fatorial:\n\n')
num = int(input('Digite um nÃºmero para descobrir seu FATORIAL: '))
c = num
f = 1
print('Calculando {}! = '.format(num), end='')
for c in range(num, 0, -1):
    print('{}'.format(c), end='')
    print(' x ' if c > 1 else ' = ', end='')
    f *= c
    c -= 1
print('{}'.format(f))
